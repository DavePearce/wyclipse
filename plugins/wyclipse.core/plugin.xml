<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
	
   
	<extension
		point="org.eclipse.core.filebuffers.documentSetup">
		<participant
			extensions="whiley"
			class="wyclipse.editor.DocumentSetup">
		</participant>
	</extension>
   <extension
       point="org.eclipse.core.contenttype.contentTypes">
      <content-type
            base-type="org.eclipse.jdt.core.javaSource"
            file-extensions="whiley"
            id="whileySource"
            name="Whiley Source File"
            priority="high">
      	</content-type>
      	<content-type
            base-type="org.eclipse.core.runtime.text"
            file-extensions="whiley"
            id="wyclipse.whileyText"
            name="Whiley Text File"
           priority="low">
      </content-type>
   </extension>
   
   <extension
         id="wyclipse.whileybuilder"
         name="Whiley Builder"
         point="org.eclipse.core.resources.builders">
      	<builder
      		hasNature="true">
         	<run
            	class="wyclipse.builder.Builder">
         	</run>
       </builder>
   </extension>
   
   <extension
         id="wyclipse.whileynature"
         name="Whiley Nature"
         point="org.eclipse.core.resources.natures">
      <builder
            id="wyclipse.whileybuilder">
      </builder>
      <runtime>
         <run
               class="wyclipse.natures.WhileyNature">
         </run>
      </runtime>
      <requires-nature
            id="org.eclipse.jdt.core.javanature">
      </requires-nature>
      <content-type
            id="wyclipse.whileySource">
      </content-type>
   </extension>

 
   <extension
        id="wyclipse.whileymarker"
       	name="Whiley Syntax Marker"
        point="org.eclipse.core.resources.markers">
      	<super type="org.eclipse.core.resources.textmarker"/>
		<super type="org.eclipse.core.resources.problemmarker"/>
		<persistent value="true"/>
		
   </extension>
   
   
	
		
   
   <extension
         point="org.eclipse.jdt.core.classpathContainerInitializer">
      <classpathContainerInitializer
          id="wyclipse.WHILEY_CONTAINER"
          class="wyclipse.builder.WhileyClasspathContainerInitialiser"/>
   </extension>
</plugin>
