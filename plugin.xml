<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin
	id="org.eclipse.ui.articles.perspective"
	name="Wyclipse"
	version="0.0.3">

				
	<extension
		point="org.eclipse.ui.perspectives">
	<perspective
		name =" Wyclipse"
		class="wyclipse.perspective.Perspective"
		id="org.eclipse.ui.articles.perspective.Whiley"
		icon="icons/whiley_file.gif">
	</perspective>
	</extension>
  <extension
         point="org.eclipse.ui.editors">
      <editor
            class="wyclipse.editor.Editor"
            contributorClass="org.eclipse.ui.texteditor.BasicTextEditorActionContributor"
            extensions="whiley"
            icon="icons/whiley_file.gif"
            id="whileyEditor"
            name="Whiley Source File Editor">
         <contentTypeBinding
               contentTypeId="wyclipse.whileySource">
         </contentTypeBinding>
      </editor>
   </extension>
   
   <extension
         id="whileybuilder"
         name="Whiley Project Builder"
         point="org.eclipse.core.resources.builders">
      <builder
            hasNature="true">
         <run
               class="wyclipse.builder.Builder">
         </run></builder>
   </extension>
   <extension
         id="whileynature"
         name="Whiley Nature"
         point="org.eclipse.core.resources.natures">
      <builder
            id="wyclipse.whileybuilder">
      </builder>
      <runtime>
         <run
               class="wyclipse.natures.WhileyNature">
         </run>
      </runtime>
      <requires-nature
            id="org.eclipse.jdt.core.javanature">
      </requires-nature>
      <content-type
            id="wyclipse.whileySource">
      </content-type>
   </extension>

<extension point="org.eclipse.ui.newWizards">
	 <category
            id="wyclipse.WhileyCategory"
            name="Whiley"
            visible="true">
    </category>
   	<wizard
            category="wyclipse.WhileyCategory"
            class="wyclipse.wizards.NewModuleWizard"
            icon="icons/newmodule_wiz.gif"
           
            hasPages="true"
            id="wyclipse.newModuleWizard"
            name="Whiley Module"
           
            project="false"
            visible="true">
            
            
      </wizard>	
       <wizard
            category="wyclipse.WhileyCategory"
            class="wyclipse.wizards.NewProjectWizard"
            icon="icons/newwprj_wiz.gif"
            finalPerspective="wyclipse.perspective.Perspective"
            hasPages="true"
             id="wyclipse.newProjectWizard"
            name="Whiley Project"
            preferredPerspectives="wyclipse.perspective.Perspective"
            project="false"
            visible="true">
       </wizard>	
 </extension>
 
   <extension
         id="whileymarker"
         name="Whiley Syntax Marker"
         point="org.eclipse.core.resources.markers">
      <super
            type="org.eclipse.core.resources.textmarker">
      </super>
      <super
            type="org.eclipse.core.resources.problemmarker">
      </super>
   </extension>
   <extension
         point="org.eclipse.debug.core.launchConfigurationTypes">
      <launchConfigurationType
            delegate="wyclipse.launchers.WhileyLauncher"
            delegateDescription="Run a Whiley Application"
            delegateName="Whiley Application Launcher"
            id="wyclipse.whileyLaunchConfiguration"
            modes="run"
            name="Whiley Application"
            public="true"
            sourceLocatorId="org.eclipse.jdt.launching.sourceLocator.JavaSourceLookupDirector"
            sourcePathComputerId="org.eclipse.jdt.launching.sourceLookup.javaSourcePathComputer">
      </launchConfigurationType>
   </extension>
   <extension point="org.eclipse.debug.ui.launchConfigurationTypeImages">
		<launchConfigurationTypeImage
			icon ="icons/whiley_file.gif"
			configTypeID="wyclipse.whileyLaunchConfiguration"
			id="wyclipse.launch.launchProgram">
		</launchConfigurationTypeImage>
	</extension>
	<extension point="org.eclipse.debug.ui.launchShortcuts">
		<shortcut
		id = "wyclipse.launch.launchProgram"
		class="wyclipse.launch.LaunchShortcut"
		label="Whiley Launch"
		icon="icons/whiley_file.gif"
		modes="run">
			<perspective id ="org.eclipse.jdt.ui.JavaPerspective"/>
		</shortcut>
	</extension>
		
   <extension
         point="org.eclipse.ui.navigator.navigatorContent">
      <commonFilter
            activeByDefault="true"
            id="wyclipse.wyilCommonFilter"
            name="Wyil Files">
	<filterExpression>
	  <and>
	    <adapt type="org.eclipse.core.resources.IResource">
	      <test property="org.eclipse.core.resources.name" value="*.wyil"/>
	    </adapt>
	  </and>
        </filterExpression>
      </commonFilter>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.viewer">
      <viewerContentBinding
	  viewerId="org.eclipse.ui.navigator.ProjectExplorer">
	<includes>
	  <contentExtension pattern="wyclipse.wyilCommonFilter"/> 
	</includes>	
      </viewerContentBinding>
   </extension>
   <extension
         point="org.eclipse.ui.ide.resourceFilters">
      <filter
            pattern="*.wyil"
            selected="true">
      </filter>
   </extension>
   <extension
         point="org.eclipse.jdt.ui.javaElementFilters">
      <filter
            description="Hide Whiley Intermediate Language files.  These are generated by the compiler and should generally be considered for internal use only."
            enabled="true"
            id="wyclipse.wyilPackageExplorerFilter"
            name="Wyil Files"
            pattern="*.wyil">
      </filter>
   </extension>
   <extension
         point="org.eclipse.core.contenttype.contentTypes">
      <content-type
            base-type="org.eclipse.jdt.core.javaSource"
            file-extensions="whiley"
            id="whileySource"
            name="Whiley Source File"
            priority="high">
      </content-type>
      <content-type
            base-type="org.eclipse.core.runtime.text"
            file-extensions="whiley"
            id="wyclipse.whileyText"
            name="Whiley Text File"
            priority="low">
      </content-type>
   </extension>
   <extension
         point="org.eclipse.debug.ui.launchConfigurationTabGroups">
      <launchConfigurationTabGroup
            class="wyclipse.launchers.WhileyLauncherTabGroup"
            id="wyclipse.whileyLaunchConfigurationTabGroup"
            type="wyclipse.whileyLaunchConfiguration">
      </launchConfigurationTabGroup>
   </extension>
	<extension point = "org.eclipse.ui.actionSets">
		<actionSet
			id = "wyclipse.Run"
			label = "Whiley"
			visible ="false">
			<action
				id = "wyclipse.Run.run"
				label="Run Whiley"
				icon = "icons/whiley_file.gif"
				tooltip="Run as a Whiley Program"
				toolbarPath="Normal/additions"
				class="wyclipse.Run.Rundelegate">
			</action>
		</actionSet>
	</extension>
	
</plugin>
